---
export interface Props {
	title: string;
}

const { title } = Astro.props;


---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="keywords" content="HTML, CSS, JavaScript, Junior Developers, Junior Developer Group, Front End Developers">
		<meta name="generator" content={Astro.generator} />
		<meta name="author" content="Junior Developer Group">
		<meta name="description" content="We're an international community helping early career developers gain new skills, make meaningful connections and provide guidance to those entering their first roles in tech" />

		<meta property="og:image" content="https://junior-developer-group.com/assets/logo-with-background.aefdea96.png" />
		<meta property="og:image:width" content="2097" />
		<meta property="og:image:height" content="2560" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content={title} />
		
		<meta property="og:locale" content="en_US" />
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content="We're an international community helping early career developers gain new skills, make meaningful connections and provide guidance to those entering their first roles in tech" />
		<meta property="og:url" content="https://junior-developer-group.com/" />
		
		<link rel="canonical" href="https://junior-developer-group.com/" />
		
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>


<script>  

	//// toggle mobile navbar
	document.addEventListener('DOMContentLoaded', () => {

		document.querySelector('.navigation-hamburger').addEventListener('click', (event) => {
			if(document.querySelector('.navigation__mobile-links').classList.contains('visible')) {
				document.querySelector('.navigation__mobile-links').classList.remove('visible')
			}
			else {
				document.querySelector('.navigation__mobile-links').classList.add('visible')
			}
		})

	});
</script>
<style>

